{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('test') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}

{{ parent() }}



<div class="flexrow">
    
        <div class="image-register-login"></div>

    
        <div class="registration-frame">
        
            <p>Inscription</p>
            

            {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.classe, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
                <div class="password-icon">
                    <i data-feather="eye"></i>
                    <i data-feather="eye-off"></i>
                </div>
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'agreeterms','type': 'checkbox'}}) }}
            </div>

            <div class="form-group">
                <button type="submit" class="registerButton">Créer mon compte</button>
            </div>

            <div class="form-group">
                <a href="{{ path('app_login') }}">Vous avez déjà un compte ? Connectez-vous</a>
                <a href="{{ path('app_acceuil') }}">Continuer en tant qu'invité</a>
            </div>
            {{ form_end(registrationForm) }}
        </div>

</div>

{% block footer %}
    {{ parent() }}
{% endblock %}

<!-- ICON SCRIPT -->
<script src="https://unpkg.com/feather-icons"></script>
<script>
    feather.replace();
</script>

{% endblock %}


